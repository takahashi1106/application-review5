<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @model == "User"%>
  <h2>Users search for "<%=@content %>"</h2>
    <thead>
      <% @users.each do |user| %>
    　<tr>
        <th>image</th>
        <th>name</th>
    　</tr>
  　</thead>
  　<tbody>
    <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
  　<td><%= user.name%></td>
  　</tbody>
  <% end %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <% elsif @model == "Book" %>
    <h2>Books search for "<%=@content %>"</h2>
    <thead>
      <% @books.each do |book| %>
        <tr>
          <th>image</th>
          <th>title</th>
          <th>body</th>
        </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
    </tbody>
      <% end %>
  <% end %>
</table>